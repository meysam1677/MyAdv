<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_width="match_parent">


    <RelativeLayout
        android:id="@+id/cv_box2"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_back_dialog_trans"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="visible">


        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/place_holder_not_circle"
            />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_clear_red"
            />

        <LinearLayout
            android:id="@+id/ll_box_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#e2e2e2"
            android:layout_below="@+id/iv_cover"
            android:layoutDirection="rtl"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="درآمد مشاهده این آگهی"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="#9b9a9a"
                    android:fontFamily="@font/bmifont_1"
                    />

                <TextView
                    android:id="@+id/tv_now_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="200 تومان"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:fontFamily="@font/bmifont_1"
                    android:textColor="#ff003c"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="درآمد کل"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:fontFamily="@font/bmifont_1"
                    android:textColor="#9b9a9a"
                    />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30000 تومان"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:fontFamily="@font/bmifont_1"
                    android:textColor="#ff003c"
                    />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_box_wallet"
            android:background="#e2e2e2"
            android:layout_marginBottom="4dp"
            >

            <CheckBox
                android:id="@+id/cb_want_to_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/cb_want_to_see"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="#9b9a9a"
                android:fontFamily="@font/bmifont_1"
                android:text="نمی خواهم آگهی ببینم"
                />

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>
